<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="NoticeManageMapper">
	<!--表名 -->
	<sql id="tableName">
		notice
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		
		
	  N_ID,
      N_TITLE,
      N_CONTENT,
      N_USER,
      N_TIME
		
	</sql>
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="keywords!= null and keywords != ''"><!-- 关键词检索 -->
			and
				(
				
					N_TITLE LIKE CONCAT(CONCAT('%', #{keywords}),'%')
					or
					N_USER LIKE CONCAT(CONCAT('%', #{keywords}),'%') 
					
				)
		</if>
		
	</select>
	
	
	<!-- 列表 -->
	<select id="findById" parameterType="page" resultType="pd">
		select * from notice where N_ID=#{id}
	</select>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set
		<if test="n_title!= null and n_title != ''">
		      n_title = #{n_title},
		</if>
		<if test="n_content!= null and n_content != ''">
		     n_content = #{n_content},
		</if>
		<if test="n_user!= null and n_user != ''">
		      n_user = #{n_user}
		</if>
		
		where
		n_id = #{n_id}
	</update>
	
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
	insert into
	<include refid="tableName"></include>
	(
	  N_TITLE,
      N_CONTENT,
      N_USER,
      N_TIME
	) values (
	
	#{n_title0},
	#{n_content0},
	#{n_user0},
	#{n_time0}
	)
</insert>


   <!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			N_ID = #{id}
	</delete>
</mapper>